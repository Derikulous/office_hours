<div class="well-middle">

  <h3 style="text-align:center"><b>Offer</b>Letter</h3>

  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div><%= f.email_field :email, class: "form-control", :autofocus => true, :placeholder => "email" %></div>

  <div><%= f.password_field :password, class: "form-control", :placeholder => "password" %></div>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Forgot your password?", new_password_path(resource_name), class: "signin-text" %><br />
  <% end -%>

  <% if devise_mapping.rememberable? -%>
  <div class="checkbox"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end %>

  <div><%= f.submit "Sign in", class: "btn btn-block" %></div>
  <% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
<%= link_to "Don't have an account?", new_registration_path(resource_name), class: "signin-text" %><br />
<% end -%>

<li class="divider"></li>

<%= render "devise/shared/links" %>

</div>
